{
  "name": "@tsmodule/tsm",
  "type": "module",
  "version": "1.1.0",
  "repository": "ctjlewis/tsm",
  "description": "TypeScript Module loader and compiler",
  "license": "MIT",
  "bin": {
    "tsm": "dist/index.js"
  },
  "types": "dist/types/index.d.ts",
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    },
    {
      "name": "Luke Edwards",
      "email": "luke.edwards05@gmail.com",
      "url": "https://lukeed.com"
    }
  ],
  "exports": {
    ".": "./loader/index.js",
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bootstrap": "node bootstrap.js && node dist/runtime/bootstrap.js",
    "prebuild": "yarn bootstrap",
    "build": "node --no-warnings --loader ./dist/loader/index.js src/index.ts build",
    "types": "tsc",
    "prepare": "yarn build && yarn types"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^8.3.0",
    "esbuild": "^0.14.0",
    "fast-glob": "^3.2.10",
    "react": "^17.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-preserve-shebang": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "typescript": "4.5.4"
  },
  "keywords": [
    "esm",
    "loader",
    "typescript",
    "loader hook",
    "require hook",
    "experimental-loader"
  ]
}
