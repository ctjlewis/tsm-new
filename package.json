{
  "name": "@tsmodule/tsmodule",
  "platform": "node",
  "type": "module",
  "version": "30.0.3",
  "repository": "tsmodule/tsmodule",
  "description": "TypeScript Module loader and compiler",
  "license": "MIT",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsmodule": "dist/index.js"
  },
  "exports": {
    ".": "./dist/loader/index.js",
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "templates/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebootload": "node bootstrap.js",
    "bootload": "node --no-warnings --loader ./dist/loader/index.js src/index.ts build -r",
    "prebuild": "yarn bootload && yarn link -f",

    "build": "tsmodule build",
    "dev": "tsmodule dev",

    "prepare": "yarn build -r",
    "prepublishOnly": "yarn test",
    "pretest": "yarn build -rb",
    "test": "ava --no-worker-threads",
    "retest": "SKIP_TEST_SETUP=1 yarn test",
    "lint": "eslint --fix src"
  },
  "dependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "ava": "^4.1.0",
    "await-shell": "^32.0.0",
    "chalk": "^5.0.1",
    "commander": "^9.0.0",
    "create-debug-logger": "^3.0.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.11.0",
    "fast-glob": "^3.2.10",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "node-watch": "^0.7.3",
    "ora": "^6.1.0",
    "path": "^0.12.7",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "eslint-config-next": "^12.1.0"
  },
  "ava": {
    "timeout": "10 minutes",
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=@tsmodule/tsmodule"
    ]
  },
  "keywords": [
    "esm",
    "loader",
    "typescript",
    "loader hook",
    "require hook",
    "experimental-loader"
  ],
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    }
  ]
}
