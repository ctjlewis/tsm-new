{
  "name": "@tsmodule/tsmodule",
  "platform": "node",
  "type": "module",
  "version": "40.11.0",
  "repository": "tsmodule/tsmodule",
  "description": "TypeScript Module loader and compiler",
  "license": "MIT",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsmodule": "dist/bin.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "templates/",
    "templates/**/.gitignore"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebootload": "node scripts/bootstrap.js",
    "bootload": "node --no-warnings --loader ./dist/loader/index.js src/index.ts build -r",
    "prebuild": "yarn bootload && npm link -f --scripts-prepend-node-path",
    "build": "node dist/bin.js build -b",
    "dev": "node dist/bin.js dev",
    "test-bundle": "yarn build -b && ava",
    "test": "yarn test-bundle",
    "retest": "SKIP_TEST_SETUP=1 yarn test-bundle",
    "retest-bundle": "SKIP_TEST_SETUP=1 yarn test-bundle",
    "lint": "eslint --fix src",
    "prepublishOnly": "node scripts/prepublish.js"
  },
  "dependencies": {
    "esbuild": "0.15.12",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "assert": "^2.0.0",
    "ava": "^5.0.1",
    "await-shell": "^34.1.1",
    "chalk": "^5.1.2",
    "commander": "^9.4.1",
    "debug-logging": "^4.0.4",
    "es-module-lexer": "^1.1.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "^13.0.0",
    "fast-glob": "^3.2.12",
    "node-watch": "^0.7.3",
    "ora": "^6.1.2",
    "path": "^0.12.7",
    "release-it": "^15.5.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "release: v${version}",
      "tagAnnotation": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  },
  "keywords": [
    "esm",
    "es module",
    "ts module",
    "bundle",
    "loader",
    "typescript",
    "loader hook",
    "require hook",
    "experimental-loader"
  ],
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    }
  ]
}
