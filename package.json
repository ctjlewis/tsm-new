{
  "name": "tsm",
  "type": "module",
  "version": "2.2.1",
  "repository": "ctjlewis/tsm",
  "description": "TypeScript Module Loader",
  "license": "MIT",
  "bin": "dist/runtime/bin.js",
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    },
    {
      "name": "Luke Edwards",
      "email": "luke.edwards05@gmail.com",
      "url": "https://lukeed.com"
    }
  ],
  "exports": {
    ".": "./dist/runtime/loader.js",
    "./config": "./config/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "bin.js",
    "utils.js",
    "require.js",
    "loader.js",
    "config"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "bootstrap": "esbuild src/commands/build/index.ts --target=es2021 --outfile=dist/bootstrap.js && TSM_BOOTSTRAP=1 node dist/bootstrap.js",
    "prebuild": "yarn bootstrap",
    "build": "./src/index.ts build",
    "types": "tsc",
    "prepare": "yarn build && yarn types"
  },
  "dependencies": {
    "chalk": "^5.0.0",
    "commander": "^8.3.0",
    "esbuild": "^0.14.0",
    "fast-glob": "^3.2.10"
  },
  "devDependencies": {
    "@types/node": "16.11.6",
    "@types/react": "17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "typescript": "4.4.4"
  },
  "keywords": [
    "esm",
    "loader",
    "typescript",
    "loader hook",
    "require hook",
    "experimental-loader"
  ]
}
