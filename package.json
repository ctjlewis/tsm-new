{
  "name": "@tsmodule/tsmodule",
  "platform": "node",
  "type": "module",
  "version": "31.2.0",
  "repository": "tsmodule/tsmodule",
  "description": "TypeScript Module loader and compiler",
  "license": "MIT",
  "types": "dist/types/index.d.ts",
  "bin": {
    "tsmodule": "dist/index.js"
  },
  "exports": {
    ".": "./dist/loader/index.js",
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "templates/"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebootload": "node bootstrap.js",
    "bootload": "node --no-warnings --loader ./dist/loader/index.js src/index.ts build -r",
    "prebuild": "yarn bootload && yarn link -f",
    "build": "tsmodule build -b",
    "dev": "tsmodule dev",
    "test-bundle": "yarn build && ava --no-worker-threads",
    "test-production-bundle": "node runBundleTests.js",
    "test": "yarn test-production-bundle",
    "retest": "SKIP_TEST_SETUP=1 yarn test",
    "lint": "eslint --fix src",
    "prepare": "yarn build -r",
    "prepublishOnly": "yarn test",
    "release": "release-it"
  },
  "dependencies": {
    "esbuild": "^0.14.25",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "assert": "^2.0.0",
    "ava": "^4.1.0",
    "await-shell": "^32.0.0",
    "chalk": "^5.0.1",
    "commander": "^9.0.0",
    "create-debug-logger": "^3.0.0",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "node-watch": "^0.7.3",
    "ora": "^6.1.0",
    "path": "^0.12.7",
    "release-it": "^14.12.5"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  },
  "ava": {
    "timeout": "10 minutes",
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=@tsmodule/tsmodule"
    ]
  },
  "keywords": [
    "esm",
    "es module",
    "ts module",
    "bundle",
    "loader",
    "typescript",
    "loader hook",
    "require hook",
    "experimental-loader"
  ],
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    }
  ]
}
