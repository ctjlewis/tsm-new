{
  "name": "@tsmodule/tsmodule",
  "platform": "node",
  "type": "module",
  "version": "42.6.0",
  "repository": "tsmodule/tsmodule",
  "description": "Create standardized TypeScript ESM packages for Node or browser.",
  "license": "MIT",
  "types": "dist/types/index.d.ts",
  "module": "dist/bin.js",
  "bin": "dist/bin.js",
  "exports": {
    ".": "./dist/bin.js",
    "./*": "./dist/*/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/types/index.d.ts",
    "dist/**/*.js",
    "templates/",
    "templates/**/.gitignore"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prebootload": "node scripts/bootstrap.js",
    "bootload": "node --no-warnings --loader ./dist/loader/index.js src/index.ts build -r",
    "prebuild": "yarn bootload && npm link -f --no-save",
    "build": "node dist/bin.js build --standalone \"src/{index.ts,bin.ts,loader/index.ts}\"",
    "dev": "node dist/bin.js dev",
    "test-bundle": "yarn build && ava",
    "test": "yarn test-bundle",
    "retest": "SKIP_TEST_SETUP=1 yarn test-bundle",
    "retest-bundle": "SKIP_TEST_SETUP=1 yarn test-bundle",
    "lint": "eslint --fix src",
    "prepublishOnly": "node scripts/prepublish.js"
  },
  "dependencies": {
    "esbuild": "^0.17.8",
    "pkg": "^5.8.1",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@tsmodule/log": "^2.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "assert": "^2.0.0",
    "ava": "^5.2.0",
    "chalk": "^5.1.2",
    "commander": "^10.0.0",
    "debug-logging": "^4.1.2",
    "es-module-lexer": "^1.1.0",
    "eslint": "^8.28.0",
    "eslint-config-next": "^13.0.5",
    "fast-glob": "^3.2.12",
    "get-tsconfig": "^4.4.0",
    "node-watch": "^0.7.3",
    "ora": "^6.1.2",
    "path": "^0.12.7",
    "release-it": "^15.5.0",
    "universal-shell": "^35.0.11"
  },
  "release-it": {
    "git": {
      "commitMessage": "release: v${version}",
      "tagAnnotation": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  },
  "keywords": [
    "esm",
    "es module",
    "ts module",
    "tsmodule",
    "typescript",
    "experimental-loader"
  ],
  "contributors": [
    {
      "name": "C. Lewis",
      "email": "ctj.lewis@icloud.com",
      "url": "https://ctjlewis.com"
    }
  ]
}
