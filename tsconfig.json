{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["es2019"],
    "target": "es2019",
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "module": "esnext",
    "checkJs": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "tsm/config": ["./config/index.d.ts"]
    }
  },
  "include": [
    "src",
    "build",
    "test",
  ],
  "exclude": [
    "node_modules"
  ]
}
